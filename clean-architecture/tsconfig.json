{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "prisma.config.ts", "scripts/**/*"]
}
