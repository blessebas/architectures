{
    "name": "clean-api-example",
    "version": "1.0.0",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc",
        "prestart": "bash ./scripts/kill-port.sh 3000 && npm run gen:openapi && npm run prisma:generate",
        "start": "ts-node src/main.ts",
        "predev": "bash ./scripts/kill-port.sh 3000 && npm run gen:openapi && npm run prisma:generate",
        "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
        "lint": "eslint . --ext .ts",
        "postinstall": "bash ./scripts/kill-port.sh 3000 || true && npm run gen:openapi || true && npm run prisma:generate || true",
        "gen:openapi": "ts-node scripts/generate-openapi.ts",
        "prisma:generate": "npx prisma generate",
        "db:migrate": "npx prisma migrate dev --name init",
        "db:push": "npx prisma db push"
    },
    "dependencies": {
        "@asteasolutions/zod-to-openapi": "^8.1.0",
        "@prisma/adapter-mariadb": "^7.0.1",
        "@prisma/client": "^7.0.1",
        "bcrypt": "^6.0.0",
        "dotenv": "^17.2.3",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^9.0.0",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/express": "^4.17.25",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/node": "^20.19.25",
        "@types/uuid": "^10.0.0",
        "prisma": "^7.0.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.3"
    }
}
