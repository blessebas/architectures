generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String?
  createdAt    DateTime @default(now())
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  done        Boolean  @default(false)
  ownerId     String?
  createdAt   DateTime @default(now())
}
